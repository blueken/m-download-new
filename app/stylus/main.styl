body
  background #fafafa
  font-family "Helvetica Neue", Helvetica, Arial, "Microsoft YaHei",  "SimSun"
  color #FFF


.hero-unit
  margin 50px auto 0 auto
  width 300px
  font-size 18px
  font-weight 200
  line-height 30px
  background-color #eee
  border-radius 6px
  padding 60px
  h1
    font-size 60px
    line-height 1
    letter-spacing -1px


p 
    color #747474

.wrapper
    width 100%
    max-width 640px 
    // background-color gold
    margin 0 auto
    zoom 0.5
.header
    width 100%
    min-height 85px
    margin 0 auto
    margin 48px auto
    overflow hidden
    // zoom 0.5
    img
        float left
        margin-right 32px
        margin-left 176px
    h2
        font-size 32px
        margin 6px auto
    p 
        color white
        margin-top 0

.content
    width 100%
    max-width 640px
    // background-color gold
    .icon_ios
        margin-left 8.4% //54/640
    .icon_and
        margin-left 2.5% //16/640

.footer
    width 100%
    max-width 640px
    min-height 440px
    background-color white
    position relative
    top -240px
    .dots_bg
        width 100%
        height 3.59%
        min-height 33px
        background url(../images/dots_bg.png)
    .down
        width 273px
        height 81px
        display inline-block
        text-decoration none
        margin-top 32px
        margin-left 32px
        margin-bottom 10px
        .line
            display inline-block
            width 180px
            height 30px
            margin-left 80px
            font-size 20px 
            color white
        .line1
            margin-top 16px
        .line2
            margin-top 0px
    .down_ios
        background url("../images/ios_btn.png")

    .down_and
        background url("../images/and_btn.png")
    p 
        width 100%
        font-size 24px
        margin-bottom 24px
        padding-left 152px

        &:before
            content " "
            display inline-block
            width 14px
            height 14px
            background-color #f9a825
            border-radius 7px
            margin-right 25px