html
  font-size 62.5%
body
  background #333
  font-family "Helvetica Neue", Helvetica, Arial, "Microsoft YaHei",  "SimSun"
  
  color #FFF  


.hero-unit
  margin 50px auto 0 auto
  width 300px
  font-size 18px
  font-weight 200
  line-height 30px
  background-color #eee
  border-radius 6px
  padding 60px
  h1
    font-size 60px
    line-height 1
    letter-spacing -1px

