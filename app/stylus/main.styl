html
  font-size 62.5%
body
  background #333
  font-family "Helvetica Neue", Helvetica, Arial, "Microsoft YaHei",  "SimSun"
  
  color #FFF  


.hero-unit
  margin 50px auto 0 auto
  width 300px
  font-size 18px
  font-weight 200
  line-height 30px
  background-color #eee
  border-radius 6px
  padding 60px
  h1
    font-size 60px
    line-height 1
    letter-spacing -1px
.overlay
  width 100%
  height 100%
  background rgba(0,0,0,0.6)
  position fixed 
  top 0
  left 0
  font-size 35px
  text-align  center
  display none
  p 
    width 100%
    height 50px
    position absolute
    top 35%

/*function begin*/
transform()
  transform arguments
  -webkit-transform arguments
  -moz-transform arguments
  -o-transform arguments
  -ms-transform arguments
/*function end*/

