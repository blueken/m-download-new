.landscape
	width 100%
	height 100%
	background rgba(34,41,44,0.9)
	position fixed 
	top 0
	left 0
	font-size 35px
	text-align  center
	visibility visible
	opacity 0
	animation fadein 5s forwards
	p 
		position absolute
		top 40%
		left 50%
		-webkit-transform translateX(-50%)

@keyframes fadein
	0%
		opacity 0.1
	90% 
		opacity 1
	100%
		opacity 0
		visibility hidden
		
